<Window x:Class="CasaEmpeño.View.ProductoEncontradoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Producto Encontrado" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="White" Margin="20">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">

            <!-- Icono de usuario -->

            <!-- Título principal -->
            <!-- Icono de usuario -->

            <!-- Título principal -->
            <!-- Icono de usuario -->

            <!-- Título principal -->
            <Border Background="#F0F0F0" Padding="10" Margin="0,20,0,10">
                <StackPanel>
                    <TextBlock Text="Producto Encontrado" FontSize="18" FontWeight="Bold" TextAlignment="Center" />
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="0,10" Padding="5">
                        <TextBlock Text="Precio = 1000" FontSize="14" TextAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Imagen del producto -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Width="120" Height="120" Background="#EFEFEF" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="0,10,20,0">
                    <TextBlock Text="Foto del producto" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   TextAlignment="Center" 
                   FontSize="10" 
                   Foreground="Gray" 
                   Margin="5"/>
                </Border>
                <!-- Descripción -->
                <TextBox Grid.Column="1" 
                     Text="Descripcion del producto"
                     Margin="0,20"
                     FontSize="14"
                     BorderBrush="Black"
                     BorderThickness="2"
                     Padding="10"
                     Height="100"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"/>
            </Grid>
            

            

            <!-- Botón comprar -->
            <Button Content="Comprar producto"
                    Width="200" Height="40"
                    Background="Black"
                    Foreground="White"
                    FontWeight="Bold"
                    Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
