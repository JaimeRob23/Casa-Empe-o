<Window x:Class="CasaEmpeño.View.ProductosView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasaEmpeño.View"
        mc:Ignorable="d"
        Title="ProductosView" Height="450" Width="800">

    <Border CornerRadius="12" BorderThickness="2" Opacity="0.95">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="White" Offset="0.2"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Artículos disponibles"
                       FontFamily="Montserrat"
                       FontSize="30"
                       FontWeight="SemiBold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,20"/>

            <!-- Selector de categoría -->
            <ComboBox x:Name="cmbCategorias"
                      Grid.Row="1"
                      Width="300"
                      Height="35"
                      HorizontalAlignment="Center"
                      FontFamily="Montserrat"
                      FontSize="14"
                      Margin="0,10,0,20"
                      Foreground="Black"
                     
                      Background="White"
                      BorderBrush="Gray"
                      BorderThickness="0,0,0,2"/>

            <!-- Grid de productos -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <WrapPanel HorizontalAlignment="Center" Margin="0,20,0,0">
                    <!-- Producto 1 -->
                    <StackPanel Width="150" Margin="10">
                        <Border Width="150" Height="150" Background="LightGray" CornerRadius="10"/>
                        <Button Content="Comprar"
                                FontFamily="Montserrat"
                                FontWeight="SemiBold"
                                Background="Black"
                                Foreground="White"
                                BorderBrush="Transparent"
                                Height="35"
                                Margin="0,10,0,0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Black"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="BlueViolet"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Puedes copiar y pegar más StackPanel iguales para más productos -->
                    <!-- Producto 2 -->
                    <StackPanel Width="150" Margin="10">
                        <Border Width="150" Height="150" Background="LightGray" CornerRadius="10"/>
                        <Button Content="Comprar"
                                FontFamily="Montserrat"
                                FontWeight="SemiBold"
                                Background="Black"
                                Foreground="White"
                                BorderBrush="Transparent"
                                Height="35"
                                Margin="0,10,0,0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Black"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="BlueViolet"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Producto 3 -->
                    <StackPanel Width="150" Margin="10">
                        <Border Width="150" Height="150" Background="LightGray" CornerRadius="10"/>
                        <Button Content="Comprar"
                                FontFamily="Montserrat"
                                FontWeight="SemiBold"
                                Background="Black"
                                Foreground="White"
                                BorderBrush="Transparent"
                                Height="35"
                                Margin="0,10,0,0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Black"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="BlueViolet"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Agrega más productos aquí -->
                </WrapPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>